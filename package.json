{
  "name": "@nosto/search-js",
  "version": "0.1.0",
  "license": "ISC",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/core/search.cjs.js",
  "module": "./dist/core/search.es.js",
  "types": "./dist/core/src/search.d.ts",
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "exports": {
    ".": {
      "types": "./dist/core/src/search.d.ts",
      "import": "./dist/core/search.es.js",
      "require": "./dist/core/search.cjs.js"
    },
    "./currencies": {
      "types": "./dist/core/src/currencies.d.ts",
      "import": "./dist/core/currencies.es.js",
      "require": "./dist/core/currencies.cjs.js"
    },
    "./thumbnails": {
      "types": "./dist/core/src/thumbnails.d.ts",
      "import": "./dist/core/thumbnails.es.js",
      "require": "./dist/core/thumbnails.cjs.js"
    },
    "./preact/hooks": {
      "types": "./dist/preact/src/hooks.d.ts",
      "import": "./dist/preact/hooks.es.js",
      "require": "./dist/preact/hooks.cjs.js"
    }
  },
  "keywords": [],
  "author": "Nosto",
  "scripts": {
    "build": "tsc && npm run build-packages  && npm run build-dts && npm run typedoc",
    "build-packages": "vite build --config vite.core.config.ts && vite build --config vite.preact.config.ts",
    "build-dts": "tsc --noEmit false --emitDeclarationOnly",
    "test": "vitest --run",
    "lint": "eslint",
    "typedoc": "typedoc packages/*/src/*.ts"
  },
  "peerDependencies": {
    "preact": "^10.25.4"
  },
  "devDependencies": {
    "@nosto/nosto-js": "^1.4.4",
    "@testing-library/dom": "^10.4.0",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/node": "^22.13.1",
    "copyfiles": "^2.4.1",
    "eslint": "^9.20.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-barrel-files": "^2.1.0",
    "eslint-plugin-prettier": "^5.2.3",
    "jsdom": "^26.0.0",
    "prettier": "^3.5.0",
    "typedoc": "^0.27.7",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.0",
    "vite": "^6.1.0",
    "vitest": "^3.0.5"
  },
  "publishConfig": {
    "access": "public"
  }
}
