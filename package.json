{
  "name": "@nosto/search-js",
  "version": "0.1.0",
  "license": "ISC",
  "type": "module",
  "files": [
    "dist"
  ],
  "workspaces": [
    "packages/*"
  ],
  "main": "./dist/core/search.cjs.js",
  "module": "./dist/core/search.es.js",
  "types": "./dist/core/src/search.d.ts",
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "exports": {
    ".": {
      "types": "./dist/core/core.d.ts",
      "import": "./dist/core/core.es.js",
      "require": "./dist/core/core.cjs.js"
    },
    "./currencies": {
      "types": "./dist/currencies/currencies.d.ts",
      "import": "./dist/currencies/currencies.es.js",
      "require": "./dist/currencies/currencies.cjs.js"
    },
    "./thumbnails": {
      "types": "./dist/thumbnails/thumbnails.d.ts",
      "import": "./dist/thumbnails/thumbnails.es.js",
      "require": "./dist/thumbnails/thumbnails.cjs.js"
    },
    "./preact": {
      "types": "./dist/preact/preact.d.ts",
      "import": "./dist/preact/preact.es.js",
      "require": "./dist/preact/preact.cjs.js"
    }
  },
  "keywords": [],
  "author": "Nosto",
  "scripts": {
    "build": "tsc && npm run build-packages  && npm run build-dts && npm run typedoc",
    "build-packages": "rm -rf dist && find packages -name 'vite.config.ts' | xargs -I $0 npm run build-single-package $0",
    "build-single-package": "vite build --config",
    "build-dts": "tsc --noEmit false --emitDeclarationOnly",
    "test": "vitest --run",
    "lint": "eslint",
    "typedoc": "typedoc packages/core/core.ts packages/currencies/currencies.ts packages/thumbnails/thumbnails.ts packages/preact/preact.ts"
  },
  "devDependencies": {
    "@nosto/nosto-js": "^1.5.0",
    "@testing-library/dom": "^10.4.0",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/node": "^22.13.4",
    "copyfiles": "^2.4.1",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-barrel-files": "^3.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "jsdom": "^26.0.0",
    "prettier": "^3.5.2",
    "typedoc": "^0.27.7",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.0",
    "vite": "^6.1.0",
    "vitest": "^3.0.5"
  },
  "publishConfig": {
    "access": "public"
  }
}
